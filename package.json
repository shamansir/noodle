{
  "name": "noodle",
  "version": "0.1.0",
  "private": true,
  "description": "Reactive Patch Development with PureScript",
  "license": "MIT",
  "repository": "shamansir/noodle",
  "author": {
    "name": "Ulric Wilfred",
    "email": "shaman.sir@gmail.com"
  },
  "files": [],
  "scripts": {
    "postinstall": "spago install",
    "clean": "rm -rf node_modules output .spago output/* *.lock && mkdir ./output",
    "spago:build": "spago build --path './examples/tensorflow/**/*.purs' --purs-args '-o output/'",
    "spago:watch": "spago bundle-app --watch --path './examples/tensorflow/**/*.purs' --main TensorFlow.Main --to ./output/app.js --purs-args '--output ./output'",
    "spago:test": "spago test",
    "spago:bundle": "spago bundle-app --path './examples/tensorflow/**/*.purs' --main TensorFlow.Main --to ./output/app.js --purs-args '--output ./output'",
    "docker:build": "docker build . -t noodle",
    "docker:run": "docker run -p 8080:8080 noodle",
    "parcel:build": "~/.yarn/bin/parcel build ./index.html -d ./output",
    "parcel:serve": "~/.yarn/bin/parcel serve ./index.html -d ./output",
    "parcel:watch": "~/.yarn/bin/parcel ./index.html -d ./output",
    "now:build": "(npm run spago:bundle &> log) && rm -Rf ./public && mkdir ./public && cp -R ./output ./public && cp ./index.html ./public && mkdir ./public/css ./public/example-css/ && cp ./src/Noodle/Render/Html/*.css ./public/css/ && cp ./examples/tensorflow/Toolkit/Render/*.css ./public/example-css/ && cp ./index.docker.css ./public/index.css",
    "start": "npm run clean && npm run spago:bundle && npm run parcel:serve",
    "dev": "npm run spago:watch & npm run parcel:watch"
  },
  "dependencies": {
    "lodash.difference": "^4.5.0",
    "parcel": "^1.12.4",
    "purescript-psa": "^0.7.3",
    "wrappy": "^1.0.2"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "purescript": "^0.13.6",
    "spago": "^0.14.0"
  }
}
